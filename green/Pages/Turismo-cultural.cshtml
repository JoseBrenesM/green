<script>
    const scrollAmount = 520; // Ajusta según el ancho de las tarjetas

    function scrollCarousel(direction) {
        const container = document.getElementById('carouselContainer');
        container.scrollLeft += direction * scrollAmount;
    }
</script>

<style>
    body {
        background-color: #343a40; /* Fondo oscuro */
        color: black; /* Color del texto negro */
        text-align: center;
    }

    #actividades img {
        cursor: pointer; /* Cambia el cursor al pasar sobre la imagen */
        max-width: 100%; /* Asegura que la imagen no sobresalga */
        height: auto;
    }

    /* Estilos generales */
    section {
        margin: 20px 0;
        position: relative;
    }

    /* Contenedor del carrusel */
    .carousel-container {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
    }

    /* Tarjeta de recomendación */
    .card {
        min-width: 610px;
        max-width: 610px;
        margin: 10px;
        background-color: white; /* Fondo blanco para las tarjetas */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .card img {
            width: 100%;
            border-radius: 8px 8px 0 0;
        }

        .card div {
            padding: 10px;
            font-size: 16px;
            color: black; /* Texto negro en las tarjetas */
        }

    /* Botones de desplazamiento */
    .carousel-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        font-size: 24px;
        cursor: pointer;
        z-index: 10;
    }

        .carousel-button.left {
            left: 0;
        }

        .carousel-button.right {
            right: 0;
        }
</style>
