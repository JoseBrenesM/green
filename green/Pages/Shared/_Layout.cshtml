<!DOCTYPE html>
<html lang="en">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - green</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light box-shadow">
            <div class="container">
                <div class="d-inline-flex justify-content-between w-100">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Inicio</a>
                        </li>

                        <li>
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="color:white; font-size:20px; font-family:'Sans Serif Collection';font-weight:bold">
                                    Turismo
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Turismo de aventura</a></li>
                                    <li><a class="dropdown-item" href="#">Ecoturismo</a></li>
                                    <li><a class="dropdown-item" href="/Turismo-playa">Turismo de playa</a></li>
                                    <li><a class="dropdown-item" href="/Turismo-cultural">Turismo cultural</a></li>
                                    <li><a class="dropdown-item" href="#">Turismo rural</a></li>
                                    <li><a class="dropdown-item" href="#">Turismo de bienestar</a></li>
                                    <li><a class="dropdown-item" href="#">Turismo médico</a></li>
                                </ul>
                            </div>
                        </li>
                      
                        <li>
                            <div class="dropdown">
                                <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false" style="color:white; font-size:20px; font-family:'Sans Serif Collection';font-weight:bold">
                                    Adicione a su viaje
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                    <li><a class="dropdown-item" href="/Spa">Spa</a></li>
                                    <li><a class="dropdown-item" href="#">Restaurantes</a></li>
                                    <li><a class="dropdown-item" href="#">Bares</a></li>
                                    <li><a class="dropdown-item" href="#">Cafeterias</a></li>
                                </ul>
                            </div>
                        </li>
                        <li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Itinerario">Mi Itinerario</a>
                        </li>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Login">Iniciar Sesion</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        </br>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color:transparent">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 py-5 my-5 border-top">
                <div class="col mb-3">
                    <div class="lc-block mb-3">
                        <a class="navbar-brand " href="">
                            <img src="/img/logo2.png" alt="Alternate Text" style="width:150px; height:150px" />
                        </a>
                    </div>
                 

                </div>
                <div class="col offset-md-2 mb-3">
                    <div class="lc-block mb-4">
                        <div editable="rich">
                            <h4 style="color:#868D46">Inicio</h4>
                        </div>
                    </div>
                    <!-- /lc-block -->
                    <div class="lc-block small">
                        <style>
                            .dropdown-item:hover {
                                text-decoration: underline;
                                color: #868D46;
                                font-weight: bold;
                            }
                            
                            .footer-links-list ul {
                                padding-left: 0
                            }

                                .footer-links-list ul li {
                                    margin-bottom: 15px;
                                    list-style-type: none;
                                    padding-left: 0
                                }

                            .footer-links-list a {
                                text-decoration: none;
                                color: var(--bs-body-color);
                            }

                                .footer-links-list a:hover {
                                    color: #fff;
                                    text-decoration:underline;
                                }
                        </style>
                        <div editable="rich" class="footer-links-list">

                            <ul>
                                <li><a href="./Index" style="color:white">Inicio</a> </li>
                                <li><a href="/Producto" style="color:white">Mi Itinerario</a></li>
                                <li><a href="/Producto" style="color:white">Extras</a></li>

                            </ul>

                        </div>
                    </div>
                    <!-- /lc-block -->
                </div>

                <div class="col mb-3">
                    <div class="lc-block mb-4">
                        <div editable="rich">
                            <h4 style="color:#868D46">Redes</h4>
                        </div>
                    </div>
                    <!-- /lc-block -->
                    <div class="lc-block small">
                        <div editable="rich" class="footer-links-list">

                            <ul>
                                <li><a href="https://www.facebook.com/" target="_blank" style="color:white">Facebook</a> </li>
                                <li><a href="https://www.instagram.com/" target="_blank" style="color:white">Instagram</a> </li>
                                <li><a href="#" target="_blank" style="color:white">WhatsApp</a> </li>
                            </ul>

                        </div>
                    </div>
                    <!-- /lc-block -->
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
