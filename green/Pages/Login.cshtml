@page
@model green.Pages.LoginModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<main class="mt-5" style="background-image:src(/wwwroot/img/logo.jpg)">

    <div class="container">

        <div class="row justify-content-center" style="background-color:transparent">
            <div class="col-md-4">
                <div class="text-center mb-4">
                    <h2 style="color:#868D46">Bienvenido!</h2>
                    <p>Por favor accede a tu cuenta.</p>
                </div>
                <form class="form p-4 border rounded" method="post" style="background-color:transparent ">
                    <div class="mb-3">
                        <label for="email" class="form-label" style="color:white">Email</label>
                        <input type="email" class="form-control" placeholder="Correo Electrónico" aria-label="Nombre de usuario" aria-describedby="basic-addon1">

                        <span class="text-danger d-block mt-1"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label" style="color:white">Password</label>
                        <input type="password"  class="form-control" placeholder="Contraseña" aria-label="Nombre de usuario" aria-describedby="basic-addon1">

                      
                    </div>
                    <div class="mb-3 text-end">
                        <a href="#" class="text-decoration-none">Olvide mi Contraseña</a>
                    </div>
                    <a href="/Itinerario" class="btn btn-success w-100">Ingresar</a>
                    <br />
                    <div><a href="../Index" class="btn btn-secondary w-100" style="margin-top:10px">Volver</a></div>

                    <br /><br />
                    <h6 class="" style="color:black">
                        Si eres nuevo, <a asp-page="./Registrarse" class="card-link">Registrate</a> aqui.
                    </h6>
                </form>
            </div>
        </div>
    </div>

</main>
</main>