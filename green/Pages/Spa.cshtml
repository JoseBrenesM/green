@page
@model RestaurantesModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<section>
    <h2 style="color:white">Servicio de spa</h2>
    <button class="carousel-button left" onclick="scrollCarousel(-1)">&#10094;</button>
    <div class="carousel-container" id="carouselContainer">
        <!-- Tarjetas de recomendación -->
        <div class="card">
            <img src="/img/spa.jpeg" alt="Recomendación 1" />
            <div>Somos una empresa que brinda servicios de spa en la comodidad de tu hogar o alojamiento</div>
            <div><button class="btn btn-success" onclick="showDetails('Citrus')">Mas detalles</button></div>
        </div>
        
    </div>
    <button class="carousel-button right" onclick="scrollCarousel(1)">&#10095;</button>
</section>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: white;">
            <!-- Fondo blanco -->
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Detalles del Spa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="color: black;">
                <!-- Texto negro en el modal -->
                <h9 id="restaurantDetails" class="color:black"></h9>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="openMap()">Reservar</button>
                <button type="button" class="btn btn-danger" onclick="openMap()">Prefiero tienda fisica</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showDetails(restaurantName) {
        let details = `Somos una empresa que brinda servicios de spa en la comodidad de tu hogar o alojamiento`;

        document.getElementById('restaurantDetails').innerHTML = details;
        var myModal = new bootstrap.Modal(document.getElementById('detailsModal'));
        myModal.show();
    }

    function openMap() {
        alert("Abriendo el mapa...");
    }
</script>

<script>
    const scrollAmount = 520; // Ajusta según el ancho de las tarjetas

    function scrollCarousel(direction) {
        const container = document.getElementById('carouselContainer');
        container.scrollLeft += direction * scrollAmount;
    }
</script>

<style>
    body {
        background-color: #343a40; /* Fondo oscuro */
        color: black; /* Color del texto negro */
        text-align: center;
    }

    #actividades img {
        cursor: pointer; /* Cambia el cursor al pasar sobre la imagen */
        max-width: 100%; /* Asegura que la imagen no sobresalga */
        height: auto;
    }

    /* Estilos generales */
    section {
        margin: 20px 0;
        position: relative;
    }

    /* Contenedor del carrusel */
    .carousel-container {
        display: flex;
        overflow-x: auto;
        scroll-behavior: smooth;
    }

    /* Tarjeta de recomendación */
    .card {
        min-width: 1100px;
        max-width: 100px;
        margin: 10px;
        background-color: white; /* Fondo blanco para las tarjetas */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .card img {
            width: 100%;
            border-radius: 8px 8px 0 0;
        }

        .card div {
            padding: 10px;
            font-size: 16px;
            color: black; /* Texto negro en las tarjetas */
        }

    /* Botones de desplazamiento */
    .carousel-button {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        font-size: 24px;
        cursor: pointer;
        z-index: 10;
    }

        .carousel-button.left {
            left: 0;
        }

        .carousel-button.right {
            right: 0;
        }
</style>
